---
import DefaultFooter from '@astrojs/starlight/components/Footer.astro';

const routeId = String(Astro.locals.starlightRoute.id ?? '').replace(/\\/g, '/');
const routeIdWithoutExt = routeId.replace(/\.(md|mdx)$/i, '');
const isBlogEntry = routeIdWithoutExt.startsWith('blog/');
const isBlogIndex = routeIdWithoutExt === 'blog/index' || routeIdWithoutExt === 'blog';
const isBlogPost = isBlogEntry && !isBlogIndex;

const title = Astro.locals.starlightRoute.entry.data.title ?? 'Helm';
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : Astro.url.href;
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(canonicalUrl);

const shareLinks = [
	{
		label: 'Share on X',
		href: `https://x.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
		newTab: true,
	},
	{
		label: 'Share on LinkedIn',
		href: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
		newTab: true,
	},
	{
		label: 'Share on Reddit',
		href: `https://www.reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`,
		newTab: true,
	},
	{
		label: 'Share via Email',
		href: `mailto:?subject=${encodedTitle}&body=${encodedUrl}`,
		newTab: false,
	},
];
---

{
	isBlogPost && (
		<section class="helm-share-surface" aria-label="Share this blog post">
			<p class="helm-share-kicker">Share this post</p>
			<div class="helm-share-links">
				{shareLinks.map((link) => (
					<a href={link.href} target={link.newTab ? '_blank' : undefined} rel={link.newTab ? 'noreferrer' : undefined} class="helm-share-link">
						{link.label}
					</a>
				))}
			</div>
		</section>
	)
}

<DefaultFooter />
